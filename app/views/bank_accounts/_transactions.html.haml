%table.table.table-bordered
  %thead
    %tr
      %th Date of transaction
      %th Amount
      %th Transaction type
  %tbody
    - bank_account.account_transactions.each do |t|
      %tr
        %td #{t.created_at}
        %td #{t.transaction_type}
        %td #{number_to_currency(t.amount, unit: "COP ")}
    %tr
      %th
      %th Balance
      %th #{number_to_currency(bank_account.balance, unit: "COP ")}

#parameters{ data: {bank_account_id: @bank_account.id } }