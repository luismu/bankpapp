%table.table.table-bordered
  %thead
    %tr
      %th Account Number
      %th Balance
      %th Actions
  %tbody
    - bank_accounts.each do |bank_account|
      %tr
        %td #{bank_account.account_number}
        %td #{number_to_currency(bank_account.balance, unit: "COP ")}
        %td
          = link_to bank_account_path(bank_account.id), class: "btn btn-info" do
            Show